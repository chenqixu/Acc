<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/slidingmenu_top" >

    <TableRow
        android:id="@+id/tableRow_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/light_blue" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="@color/black"
        		android:textSize="21sp"
                android:text="2016-08" />

            <TextView
                android:id="@+id/textView_monthtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/textView_month"
                android:textColor="@color/black"
        		android:textSize="21sp"
                android:text="月" />

            <TextView
                android:id="@+id/textView_analysis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/black"
        		android:textSize="21sp"
                android:text="月账单分析" />
        </RelativeLayout>
    </TableRow>

    <TableRow
        android:id="@+id/tableRow_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ListView
            android:id="@+id/listView_detail"
            android:layout_width="match_parent"
            android:layout_height="450px"
            android:fadeScrollbars="true"
            android:layout_span="2" >
        </ListView>
    </TableRow>

    <TableRow
        android:id="@+id/tableRow_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_gravity="center" >

            <Button
                android:id="@+id/button_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支出" />

            <Button
                android:id="@+id/button_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收入" />

            <Button
                android:id="@+id/button_flush"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="刷卡" />

            <Button
                android:id="@+id/button_fromto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="转账" />

        </LinearLayout>
    </TableRow>

    <TableRow
        android:id="@+id/tableRow_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支出：0"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/textView_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收入：0"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/textView_surplus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="盈余：0"
                android:textAppearance="?android:attr/textAppearanceLarge" />

        </LinearLayout>
    </TableRow>

</TableLayout>
